{
    "appenders": {
        "out": {
            "type": "console"
        },
        "task": {
            "type": "dateFile",
            "filename": "logs/log.log",
            "pattern": "-yyyy-MM-dd",
            "category": "log",
            "alwaysIncludePattern": true
        }
    },
    "categories": {
        "default": {
            "appenders": ["out"],
            "level": "info"
        },
        "task": {
            "appenders": ["task"],
            "level": "info"
        }
    }
}
